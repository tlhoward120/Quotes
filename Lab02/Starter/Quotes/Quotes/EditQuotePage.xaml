<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quotes.EditQuotePage"
             Visual="Material">
    
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Author name" />
            <Entry Placeholder="Author goes here..." Text="{Binding Author}"/>
            <Label Text="Quote text" />
            <Editor Placeholder="Quote goes here..." Text="{Binding QuoteText}" VerticalOptions="FillAndExpand"/>
            <Button Text="Save" VerticalOptions="End" HorizontalOptions="Center" Clicked="SaveQuote"/> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>